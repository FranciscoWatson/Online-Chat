<Page x:Class="Chat.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chat"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel>
            <TextBox x:Name="txtUsername" Text="Usuario" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" TextChanged="txtUsername_TextChanged_1"/>
            <PasswordBox x:Name="txtPassword" Password="Contraseña" Foreground="Gray" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>

            <Button Content="Iniciar Sesión" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Page>
