<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Chat App" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Frame x:Name="LoginFrame" NavigationUIVisibility="Hidden" Grid.Column="0" Grid.ColumnSpan="21"/>

        <Frame x:Name="ContactosFrame" NavigationUIVisibility="Hidden" Grid.Column="0"/>
        <Frame x:Name="ChatFrame" NavigationUIVisibility="Hidden" Grid.Column="1"/>
    </Grid>
</Window>
